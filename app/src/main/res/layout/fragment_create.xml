<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        style="@style/Widget.MyApp.ActionBar"/>
    <AutoCompleteTextView
        style="@style/FullWidthEditText"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_action_import_contacts"
        android:layout_height="wrap_content"
        android:hint="   Subject"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd" />
    <AutoCompleteTextView
        style="@style/FullWidthEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_assignment"
        android:hint="   Topic"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd"/>
    <AutoCompleteTextView
        style="@style/FullWidthEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:drawableLeft="@drawable/ic_action_chrome_reader_mode"
        android:hint="   Topic details"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd" />
    <AutoCompleteTextView
        style="@style/FullWidthEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:drawableLeft="@drawable/ic_action_my_location"
        android:hint="   Aimed at"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="5dp"
        android:background="#bdbdbd" />
    <Button
        android:id="@+id/button_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="start creating"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:layout_marginTop="100dp"
        android:drawableRight="@drawable/ic_action_arrow_forward"/>

</LinearLayout>